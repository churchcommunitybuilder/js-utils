{
    "compilerOptions": {
      "alwaysStrict": true,
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "esModuleInterop": true,
      "jsx": "react-native",
      "lib": ["dom", "esnext"],
      "module": "esnext",
      "moduleResolution": "node",
      "outDir": "dist",
      "pretty": true,
      "sourceMap": true,
      "target": "es6",
    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "__tests__",
      "**/*.test.ts"
    ]
  }